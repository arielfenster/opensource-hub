{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"$/shared/*": ["../shared/*"],
			"$/client/*": ["./*"],
			"$/server/*": ["../server/*"]
		}
	},
	"include": ["**/*", "../server/database/schemas", "../shared", "index.d.ts", "vite-env.d.ts"]
}
